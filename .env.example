
# OCTOPUS AI MULTI-AGENT SYSTEM - ENVIRONMENT CONFIGURATION

# Copy this file to .env and fill in your actual values
# All values shown are defaults - modify as needed for your environment


# APPLICATION CONFIGURATION


# Basic application settings
APP_NAME=Octopus
APP_VERSION=0.1.0
DEBUG=false

# Server configuration
HOST=0.0.0.0           # Server bind address (0.0.0.0 for all interfaces)
PORT=9527              # Main application port


# LOGGING CONFIGURATION


# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file configuration
LOG_FILE=                                         # Leave empty to disable file logging
LOG_FILE_PATH=~/Library/Logs/octopus/octopus.log  # Default log file location
DEFAULT_FILE_ENCODING=utf-8                       # File encoding for all file operations


# PATH CONFIGURATION



# DID file paths (set these if you have existing DID files)
DID_DOCUMENT_PATH=                            # Path to your DID document
DID_PRIVATE_KEY_PATH=                         # Path to your DID private key


# AGENT CONFIGURATION


# Agent system limits
MAX_AGENTS=100            # Maximum number of concurrent agents
AGENT_TIMEOUT=300         # Agent operation timeout in seconds


# ANP (Agent Network Protocol) CONFIGURATION


# ANP System Control
ANP_SDK_ENABLED=true     # Enable/disable ANP functionality

# ANP Gateway Configuration
ANP_GATEWAY_URL=ws://localhost:8789          # WebSocket gateway URL
ANP_GATEWAY_HTTP_PORT=8089                   # HTTP gateway port

# ANP Protocol Limits and Sizes
ANP_MAX_MESSAGE_SIZE=10485760    # 10MB - Maximum message size in bytes
ANP_MAX_CHUNK_SIZE=1048576       # 1MB - Maximum chunk size in bytes
ANP_MAX_PENDING_CHUNKS=1000      # Maximum number of pending chunks
ANP_MAX_REQUEST_ID_LENGTH=100    # Maximum request ID length

# ANP Timeout Configuration (in seconds)
ANP_AUTH_TIMEOUT=30.0           # Authentication timeout
ANP_CHUNK_TIMEOUT=60.0          # Chunk processing timeout
ANP_REQUEST_TIMEOUT=300.0       # General request timeout (5 minutes)


# ANP RECEIVER ADVANCED CONFIGURATION

# These settings configure the ANP Receiver Service for handling incoming connections

# Gateway connection settings
ANP__RECEIVER__GATEWAY_URL=ws://localhost:8789
ANP__RECEIVER__LOCAL_HOST=127.0.0.1
ANP__RECEIVER__LOCAL_PORT=8001
ANP__RECEIVER__TIMEOUT=30.0

# Connection management
ANP__RECEIVER__KEEPALIVE_INTERVAL=60.0       # Keep-alive ping interval
ANP__RECEIVER__PING_INTERVAL=10.0            # Ping frequency
ANP__RECEIVER__RECONNECT_ENABLED=true        # Enable auto-reconnection
ANP__RECEIVER__RECONNECT_DELAY=5.0           # Delay between reconnection attempts
ANP__RECEIVER__MAX_RECONNECT_ATTEMPTS=10     # Maximum reconnection attempts
ANP__RECEIVER__CHUNK_SIZE=65536              # 64KB - Data chunk size


# ANP AUTHENTICATION CONFIGURATION


# Authentication settings
ANP__RECEIVER__AUTH__ENABLED=true            # Enable authentication
ANP__RECEIVER__AUTH__DID_WBA_ENABLED=false   # Enable DID-WBA authentication
ANP__RECEIVER__AUTH__TOKEN_EXPIRY=3600       # Token expiry time (1 hour)
ANP__RECEIVER__AUTH__MAX_ATTEMPTS=3          # Maximum authentication attempts


# ANP TLS/SSL CONFIGURATION


# TLS settings for secure connections
ANP__RECEIVER__TLS__ENABLED=false            # Enable TLS/SSL
ANP__RECEIVER__TLS__VERIFY_MODE=required     # TLS verification: none, optional, required


# DID (Decentralized Identity) CONFIGURATION


# DID service configuration
DID_DOMAIN=didhost.cc                        # DID domain identifier
DID_PATH=test:public                         # DID path identifier

# Authentication timing (in minutes)
AUTH_NONCE_EXPIRY_MINUTES=5                  # Nonce validity period
AUTH_TIMESTAMP_EXPIRY_MINUTES=5              # Timestamp validity period



# OPENAI / AI MODEL CONFIGURATION


# AI Provider Settings
MODEL_PROVIDER=openai                        # AI provider (currently only 'openai' supported)

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here      # Your OpenAI API key (REQUIRED)
OPENAI_BASE_URL=https://openrouter.ai/api/v1 # OpenAI compatible API base URL
OPENAI_MODEL=openai/gpt-4o                   # Model name to use
OPENAI_TEMPERATURE=0.7                       # Response randomness (0.0-2.0)
OPENAI_MAX_TOKENS=4000                       # Maximum tokens in response


# JWT AUTHENTICATION CONFIGURATION


# JWT Settings (for API authentication)
JWT_ALGORITHM=RS256                                # JWT signing algorithm
ACCESS_TOKEN_EXPIRE_MINUTES=60                     # JWT token expiry in minutes
JWT_PRIVATE_KEY_PATH=docs/jwt_key/private_key.pem  # JWT private key file
JWT_PUBLIC_KEY_PATH=docs/jwt_key/public_key.pem    # JWT public key file


# CONFIGURATION NOTES

#
# Port Configuration Summary:
# - Main Application: PORT (default: 9527)
# - ANP Gateway HTTP: ANP_GATEWAY_HTTP_PORT (default: 8089)
# - ANP Gateway WebSocket: 8789 (in ANP_GATEWAY_URL)
# - ANP Receiver Local: ANP__RECEIVER__LOCAL_PORT (default: 8001)
#
# Security Notes:
# - Always use strong passwords for MYSQL_PASSWORD in production
# - Keep OPENAI_API_KEY secure and never commit it to version control
# - Generate proper JWT keys for production use
# - Enable TLS for production deployments
#
# Performance Tuning:
# - Increase MAX_AGENTS for high-concurrency scenarios
# - Adjust timeout values based on your network latency
# - Tune ANP_MAX_MESSAGE_SIZE based on your message sizes
#
# For more information, see: https://github.com/your-org/octopus/docs